%h1 Create new porfolio item

= form_for(@portfolio_item, url: portfolio_index_url) do |f|
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :subtitle
    = f.text_field :subtitle
  .field
    = f.label :body
    = f.text_area :body
  %ul
    = f.fields_for :technologies do |tech_form|
      %li
        = tech_form.label :name
        = tech_form.text_field :name
  .actions
    = f.submit
